<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sistema Barbearia</title>
    <%- include('./css/styles'); %>
    <%- include('./javascript/fetch'); %>
    <%- include('./javascript/gerarCartao'); %>
</head>
<body>
  <header class="header-cartao">
    <div class="caixa">
        <h1>Sistema De Compras de Produtos e Serviços</h1>
        <br>
        <nav>
            <ul>
                <li><a href="/gerarCard" class="irCartao">Gerar Cartão</a></li>
                <li><a href="/produtos" class="irProdutos">Produtos</a></li>
                <li><a href="/relatorio">Relatorio</a></li>
            </ul>
        </nav>
    </div>
  </header>
  <br><br><br><br>
  <hr>
  <section class="container">
    <h1 class="tit-card">Relatorio</h1>

    <div class="divProdutoCard">
      <form class="formulario" method="post" action="/relatorio/verificar">
        <label for="cartao">Digite o número do Cartão:</label>
        <input type="number" id="cartao" name="cartao" class="cartaoProduto">
        <button class="cartaoProduto">Validar Cartão</button>
      </form>
    </div>
    <br>

    <% if (typeof error !== 'undefined' && error !== '') { %>
      <p><%= error %></p>
    <% } %>

    <% if (typeof hit !== 'undefined' && hit !== '') { %>
      <p><%= hit %></p>
      <div id="minhaDiv">
        <h1>Conteúdo da Div:</h1>
        <h3>Serviços adquiridos</h3>
        <ul>
          <% servicosAdquiridos.forEach((servico) => { %>
            <li>Serviço adquirido: <%= servico.servico %> - Data da compra: <%= servico.dataCompra %></li>
          <% }); %>
        </ul>

        <h3>Kits adquiridos</h3>
        <ul>
          <% kitsAdquiridos.forEach((kit) => { %>
            <li>Kit adquirido: <%= kit.kit %> - Data da compra: <%= kit.dataCompra %></li>
          <% }); %>
        </ul>

        <h3>Utilizações</h3>
        <ul>
          <% servicosRealizados.forEach((servico) => { %>
            <li>Data da utilização: <%= servico.dataCompra %> - Serviço realizado: <%= servico.servico %></li>
          <% }); %>
        </ul>

        <h3>Recompensas</h3>
        <ul>
          <li>Recompensa recebida e data</li>
          <li>Recompensas realizadas e data</li>
        </ul>

        <h3>Recompensas não realizadas</h3>
      </div>
    <% } %>

    <!-- Adicione esta parte em seu arquivo EJS -->

  </section>
</body>
</html>
